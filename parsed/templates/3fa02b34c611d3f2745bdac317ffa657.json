{
  "components/products/add-to-cart": "{{#if theme_settings.show_product_quantity_box}}\n    {{> components/products/qty-box}}\n{{/if}}\n\n<div class=\"alertBox productAttributes-message\" style=\"display:none\">\n    <div class=\"alertBox-column alertBox-icon\">\n        <icon glyph=\"ic-success\" class=\"icon\" aria-hidden=\"true\"><svg xmlns=\"http://www.w3.org/2000/svg\" width=\"24\" height=\"24\" viewBox=\"0 0 24 24\"><path d=\"M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z\"></path></svg></icon>\n    </div>\n    <p class=\"alertBox-column alertBox-message\"></p>\n</div>\n{{#or customer (if theme_settings.restrict_to_login '!==' true)}}\n    {{> components/products/purchase-buttons}}\n    {{{snippet 'product_addtocart'}}}\n{{/or}}\n",
  "components/products/qty-box": "<div class=\"form-field form-field--increments _addToCartVisibility\" {{#unless product.can_purchase}}style=\"display:none\"{{/unless}}>\n    <label class=\"form-label form-label--alternate\"\n            for=\"qty[{{product.id}}]\">{{lang 'products.quantity'}}</label>\n\n    <div class=\"form-increment\" data-quantity-change>\n        <button class=\"button button--icon\" data-action=\"dec\">\n            <span class=\"is-srOnly\">{{lang 'products.quantity_decrease'}}</span>\n            <i class=\"icon\" aria-hidden=\"true\">\n                <svg>\n                    <use xlink:href=\"#icon-keyboard-arrow-down\"/>\n                </svg>\n            </i>\n        </button>\n        <input class=\"form-input form-input--incrementTotal\"\n                id=\"qty[{{product.id}}]\"\n                name=\"qty[]\"\n                type=\"tel\"\n                value=\"{{#if product.min_purchase_quantity}}{{product.min_purchase_quantity}}{{else}}1{{/if}}\"\n                data-quantity-min=\"{{product.min_purchase_quantity}}\"\n                data-quantity-max=\"{{product.max_purchase_quantity}}\"\n                min=\"1\"\n                pattern=\"[0-9]*\"\n                aria-live=\"polite\">\n        <button class=\"button button--icon\" data-action=\"inc\">\n            <span class=\"is-srOnly\">{{lang 'products.quantity_increase'}}</span>\n            <i class=\"icon\" aria-hidden=\"true\">\n                <svg>\n                    <use xlink:href=\"#icon-keyboard-arrow-up\"/>\n                </svg>\n            </i>\n        </button>\n    </div>\n</div>",
  "components/products/purchase-buttons": "<div class=\"form-action-group _addToCartVisibility\" {{#unless product.can_purchase}}style=\"display:none\"{{/unless}}>\n    {{#if theme_settings.add_to_cart_btn '==' 'add_to_cart'}}\n        <div class=\"form-action\">\n            <input id=\"form-action-addToCart\" data-wait-message=\"{{lang 'products.adding_to_cart'}}\" class=\"button button--primary\" type=\"submit\"\n                value=\"{{#if product.pre_order}}{{lang 'products.pre_order'}}{{else}}{{lang 'products.add_to_cart'}}{{/if}}\">\n        </div>\n    {{else if theme_settings.add_to_cart_btn '==' 'buy_now'}}\n        <div class=\"form-action form-action--buyNow\">\n            <input id=\"form-action-buyNow\" data-wait-message=\"{{#if product.pre_order}}{{lang 'products.pre_order'}}{{else}}{{lang 'products.buy_now'}}{{/if}}\" class=\"button button--buyNow\" type=\"submit\"\n                value=\"{{#if product.pre_order}}{{lang 'products.pre_order'}}{{else}}{{lang 'products.buy_now'}}{{/if}}\">\n        </div>\n    {{else}}\n        <div class=\"form-action\">\n            <input id=\"form-action-addToCart\" data-wait-message=\"{{lang 'products.adding_to_cart'}}\" class=\"button button--primary\" type=\"submit\"\n                value=\"{{#if product.pre_order}}{{lang 'products.pre_order'}}{{else}}{{lang 'products.add_to_cart'}}{{/if}}\">\n        </div>\n        {{#unless product.pre_order}}\n        <div class=\"form-action-or\">Or</div>\n        <div class=\"form-action form-action--buyNow\">\n            <input id=\"form-action-buyNow\" data-wait-message=\"{{lang 'products.buy_now'}}\" class=\"button button--buyNow\" type=\"submit\"\n                value=\"{{lang 'products.buy_now'}}\">\n        </div>\n        {{/unless}}\n    {{/if}}\n</div>"
}